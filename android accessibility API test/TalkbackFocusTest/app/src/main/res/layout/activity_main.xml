        android:padding="20dp"
        />


    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="3"
        android:padding="20dp"
        />

</LinearLayout>