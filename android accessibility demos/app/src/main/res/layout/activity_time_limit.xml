<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content"
        tools:context=".TimeLimitActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeLimitExplain"
        android:textSize="20dp"
        />

    <TextView
            android:layout_width="wrap_content"
            android:accessibilityHeading="true"
            android:layout_height="wrap_content"
            android:text="@string/bad_example"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="showDialogWithoutGetRecommendedTimeoutMillis"
            android:text="@string/open_dialog_no_get_recommended"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:accessibilityHeading="true"
            android:text="@string/good_example"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="showDialogWithGetRecommendedTimeoutMillis"
            android:text="@string/open_dialog_no_get_recommended"
            android:textSize="20dp"
            />

</LinearLayout>