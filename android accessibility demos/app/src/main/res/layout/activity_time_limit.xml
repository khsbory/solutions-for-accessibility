<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".TimeLimitActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:theme="@style/prettyLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeLimitExplain"
            android:textSize="@dimen/heading"
            />

        <TextView
            android:layout_width="wrap_content"
            android:accessibilityHeading="true"
            android:layout_height="wrap_content"
            android:text="@string/bad_example"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showDialogWithoutGetRecommendedTimeoutMillis"
            android:text="@string/open_dialog_no_get_recommended"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:accessibilityHeading="true"
            android:text="@string/good_example"
            android:textSize="25dp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="showDialogWithGetRecommendedTimeoutMillis"
            android:text="@string/open_dialog_no_get_recommended"
            android:textSize="20dp"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>