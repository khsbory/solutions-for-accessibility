<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CollapseExpand.CollapseExpandExampleActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#008000"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:accessibilityHeading="true"
            android:text="@string/accessibleExample"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="10dp"
            />

    <TextView
        android:id="@+id/button_fruit"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/fruit"
        android:background="@android:color/holo_green_dark"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_fruit"
        android:orientation="vertical"
        android:background="#5028E7FF"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/button_apple"
            android:layout_width="wrap_content"
android:enabled="false"
                        android:layout_height="wrap_content"
            android:text="@string/apple"/>
        <Button
            android:id="@+id/button_orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/orange"/>

    </LinearLayout>
    <TextView
        android:id="@+id/button_vegitable"
        android:layout_width="100dp"
        android:layout_height="50dp"
                android:text="@string/vegitable"
        android:background="@android:color/holo_orange_dark"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_vegitable"
        android:orientation="vertical"
        android:background="#5028E7FF"
        android:visibility="gone" >
        <Button
            android:id="@+id/button_bean_sprouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/bean_sprouts" />
        <Button
            android:id="@+id/button_spinach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/spinach" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/tab_bar_test"
        android:background="#FFFF00"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:accessibilityHeading="true"
            android:text="@string/nonAccessibleExample"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="10dp"
            />

    <TextView
        android:id="@+id/button_fruit2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/fruit"
                android:background="@android:color/holo_green_dark"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_fruit2"
        android:orientation="vertical"
        android:background="#5028E7FF"
        android:visibility="gone"
        >

        <Button
            android:id="@+id/button_apple2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/apple"/>
        <Button
            android:id="@+id/button_orange2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/orange"/>

    </LinearLayout>
    <TextView
        android:id="@+id/button_vegitable2"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/vegitable"
        android:background="@android:color/holo_orange_dark"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_vegitable2"
        android:orientation="vertical"
        android:background="#5028E7FF"
        android:visibility="gone" >
        <Button
            android:id="@+id/button_bean_sprouts2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/bean_sprouts" />
        <Button
            android:id="@+id/button_spinach2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:text="@string/spinach" />

    </LinearLayout>
    </LinearLayout>

</LinearLayout>


</ScrollView>