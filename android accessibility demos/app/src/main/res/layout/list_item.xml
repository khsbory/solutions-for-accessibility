<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/sale_price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35,000원"
                android:layout_marginEnd="10dp"
                android:textSize="25sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/price_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40,000원"
                android:textSize="20sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:text="소고기" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_star_24"
                android:backgroundTint="@color/GlobalButtonColor"
                />
            <TextView
                android:id="@+id/grade_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="5.0 (2)"
                android:layout_marginEnd="20dp"/>
            <TextView
                android:id="@+id/see_review_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품평 보기"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/coupon_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20% 쿠폰"
                android:layout_marginEnd="15dp"/>
            <TextView
                android:id="@+id/card_sale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카드 20%"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>